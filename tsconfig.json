{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@enums": ["src/enums"],
      "@models": ["src/models"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  },
  "exclude": [
    "../node_modules",
    "src/**/*.spec.ts",
    "./jest.config.ts",
    "./index.spec.ts"
  ],
  "include": [
    "./index.ts",
    "./src/scripts"
  ]
}
