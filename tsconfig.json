{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "rootDir": "./src",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@enums": ["src/enums"],
      "@models": ["src/models"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  },
  "exclude": [
    "../node_modules",
    "src/**/*.spec.ts",
    "./jest.config.ts"
  ]
}
